<h1>Listing bids</h1>

<table>
  <thead>
    <tr>
      <th>Buy now</th>
      <th>High bid</th>
      <th>Wanted</th>
      <th>Minimum</th>
      <th>Maximum</th>
      <th>Job</th>
      <th>Driver</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.buy_now %></td>
        <td><%= bid.high_bid %></td>
        <td><%= bid.wanted %></td>
        <td><%= bid.minimum %></td>
        <td><%= bid.maximum %></td>
        <td><%= bid.job %></td>
        <td><%= bid.driver %></td>
        <td><%= bid.user %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

