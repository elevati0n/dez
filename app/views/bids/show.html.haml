- model_class = Bid
.page-header
  %h1= t '.title', :default => Bid
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:buy_now)
    %dd
      %pre.prettyprint= @bid.buy_now
    %dt.label.label-default= model_class.human_attribute_name(:high_bid)
    %dd
      %pre.prettyprint= @bid.high_bid
    %dt.label.label-default= model_class.human_attribute_name(:wanted)
    %dd
      %pre.prettyprint= @bid.wanted
    %dt.label.label-default= model_class.human_attribute_name(:minimum)
    %dd
      %pre.prettyprint= @bid.minimum
    %dt.label.label-default= model_class.human_attribute_name(:maximum)
    %dd
      %pre.prettyprint= @bid.maximum
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    bids_path, :class => 'btn btn-default'                   |
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_bid_path(@bid), :class => 'btn btn-default'         |
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    bid_path(@bid),                                                                                              |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
