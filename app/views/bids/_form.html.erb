<%= simple_form_for(@bid) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :buy_now %>
    <%= f.input :high_bid %>
    <%= f.input :wanted %>
    <%= f.input :minimum %>
    <%= f.input :maximum %>
    <%= f.association :job %>
    <%= f.association :driver %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
