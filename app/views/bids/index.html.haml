- model_class = Bid
.page-header
  %h1= t '.title', :default => Bid
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:buy_now)
      %th= model_class.human_attribute_name(:high_bid)
      %th= model_class.human_attribute_name(:wanted)
      %th= model_class.human_attribute_name(:minimum)
      %th= model_class.human_attribute_name(:maximum)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @bids.each do |bid|
      %tr
        %td= bid.id
        %td= bid.buy_now
        %td= bid.high_bid
        %td= bid.wanted
        %td= bid.minimum
        %td= bid.maximum
        %td= l bid.created_at, format: :long
        %td
          = link_to bid_path(bid), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
            = glyph 'pencil'
          = link_to bid_path(bid), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do
            = glyph 'remove'
= link_to t('.new', :default => t("helpers.links.new")), |
  new_bid_path,                                          |
  :class => 'btn btn-primary'                            |
