= form_for @job, :html => { :class => 'form-horizontal form-model' } do |f|
  .form-group
    = f.label :details, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :details, :class => 'text-field form-control'
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        jobs_path, :class => 'btn btn-default'                       |
