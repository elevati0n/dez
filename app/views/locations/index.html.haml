- model_class = Location
.page-header
  %h1= t '.title', :default => Location
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:latitude)
      %th= model_class.human_attribute_name(:longitude)
      %th= model_class.human_attribute_name(:start)
      %th= model_class.human_attribute_name(:end)
      %th= model_class.human_attribute_name(:zipcode)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @locations.each do |location|
      %tr
        %td= location.id
        %td= location.latitude
        %td= location.longitude
        %td= location.start
        %td= location.end
        %td= location.zipcode
        %td= l location.created_at, format: :long
        %td
          = link_to location_path(location), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
            = glyph 'pencil'
          = link_to location_path(location), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do
            = glyph 'remove'
= link_to t('.new', :default => t("helpers.links.new")), |
  new_location_path,                                     |
  :class => 'btn btn-primary'                            |
